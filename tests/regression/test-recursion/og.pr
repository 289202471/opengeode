                fpar
    in startnode letter,
    in endnode letter,
    in/out best_path Path;
                /* CIF ENDTEXT */
                /* CIF START (626, 64), (70, 35) */
                START;
                    /* CIF TASK (608, 119), (106, 68) */
                    TASK best_path := {
    cost 100,
    elem {}
};
                    /* CIF DECISION (585, 207), (151, 50) */
                    DECISION startnode = endnode;
                        /* CIF ANSWER (431, 277), (70, 23) */
                        (true):
